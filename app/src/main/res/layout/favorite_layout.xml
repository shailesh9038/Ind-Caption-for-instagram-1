<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:night="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fourDp"
        android:layout_marginTop="@dimen/fourDp"
        android:layout_marginRight="@dimen/fourDp"
        android:layout_marginBottom="@dimen/fourDp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/six_dp">

        <RelativeLayout
            android:id="@+id/lin_favtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hindi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/rag"
                android:gravity="center"
                android:maxLines="5"
                android:paddingTop="10dp"
                android:scrollbars="vertical"
                android:text="Fav Data"
                android:textColor="@color/fontcolor"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hindi_layout"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/whats"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_whatsa"/>

                <ImageView
                    android:id="@+id/fav_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_share" />

                <ImageView
                    android:id="@+id/adapter_fav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_delete_black_24dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>